<%= form_with model: [ @organisation, @organisation.shifts.build ] do |form| %>
  <tr>
    <td><%= form.text_field :employee, required: true %></td>
    <td><%= form.date_field :shift_start_date, required: true %></td>
    <td><%= form.time_field :shift_start_time, required: true %></td>
    <td><%= form.time_field :shift_end_time, required: true %></td>
    <td><%= form.text_field :break_length, required: true %></td>
    <td><%= form.submit %></td>
  </tr>
<% end %>