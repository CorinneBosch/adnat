<h2>Edit <%= @shift.employee %>'s shift</h2>

<%= form_with model: [ @organisation, @shift ] do |form| %>
  <tr>
    <td><%= current_user.name %></td>
    <td><%= form.date_field :shift_start %></td>
    <td><%= form.time_field :shift_start %></td>
    <td><%= form.time_field :shift_end %></td>
    <td><%= form.text_field :break_length %></td>
    <%= form.hidden_field :employee, value: current_user.name %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <td><%= form.submit %></td>
  </tr>
<% end %>